{
  "compilerOptions": {
      "target": "es5",
      "removeComments": true,
      "listFiles": true,
      "outFile": "./dist/fairybread.min.js",
      "paths": {
        "*": ["*"]
      },
      "lib": [ "dom", "esnext", "node" ],
      "allowSyntheticDefaultImports": true,
      "module": "amd",
      "noResolve": true,
      "moduleResolution": "node",
      "diagnostics": true
  },
  "include": [
    "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}
